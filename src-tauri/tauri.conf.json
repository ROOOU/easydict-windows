{
    "$schema": "https://raw.githubusercontent.com/nicedoc/tauri-schema/master/src/schema.json",
    "productName": "EasyDict Win",
    "version": "1.0.0",
    "identifier": "com.easydict.win",
    "build": {
        "frontendDist": "../src",
        "beforeDevCommand": "",
        "beforeBuildCommand": ""
    },
    "app": {
        "windows": [
            {
                "title": "EasyDict",
                "label": "main",
                "width": 420,
                "height": 650,
                "minWidth": 360,
                "minHeight": 400,
                "decorations": false,
                "transparent": false,
                "resizable": true,
                "center": true,
                "visible": true
            }
        ],
        "withGlobalTauri": true,
        "security": {
            "csp": null
        },
        "trayIcon": {
            "iconPath": "icons/icon.png",
            "iconAsTemplate": false,
            "tooltip": "EasyDict"
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "nsis": {
                "languages": [
                    "SimpChinese",
                    "English"
                ],
                "displayLanguageSelector": false,
                "installMode": "currentUser"
            }
        }
    },
    "plugins": {}
}